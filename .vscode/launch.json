{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node", // Usar el depurador de Node.js en VSCode para Deno
      "request": "launch",
      "name": "Test pricing model without addons",
      "runtimeExecutable": "minizinc",
      "runtimeArgs": [
        "model/PricingModelNoAddons.mzn",
        "data/pricing_data_without_addons.dzn"
